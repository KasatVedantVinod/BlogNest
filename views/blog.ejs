<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title><%= blog.title %></title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="flex justify-center items-center mt-4">
            <h1 style="text-align: center;">
                <%= blog.title %>
            </h1>
            <div class="text-center">
                <img src="<%= blog.coverImageURL %>" alt="Cover Image" class="d-block mx-auto rounded"
                    style="height: 75vh; width: 40vw; object-fit: cover;" />
            </div>
            <p><%= blog.body %></p>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="50px">
            <%= blog.createdBy.fullName %>
        </div>
        <div class="container mt-3">
            
            <% if (locals.user) { %>
                <h1>Comments (<%= comment.length %>)</h1>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                <input type="text" placeholder="Enter Your Comment" name="content" class="form-control" id="content"
                        aria-describedby="emailHelp">
                <button class="mt-3 mb-3 btn btn-sm btn-primary" type="submit">Add Coment</button>
            </form>
            <div class="mt-3">
            <% comment.forEach(element => { %>
             <div>
                <img src="<%= element.createdBy.profileIamgeURL %>" alt="">
                <%= element.createdBy.fullName %>: <pre> <%= element.content %></pre>
             </div>
            <% }) %>

        </div>
            <% } %>
            
        </div>
        
        <%- include('./partials/script') %>
</body>

</html>